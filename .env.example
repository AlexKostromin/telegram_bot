# ================================
# USN Telegram Bot Configuration
# ================================

# Telegram Bot Configuration
# Get your token from BotFather: https://t.me/botfather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Application Configuration
DEBUG=False
LOGGING_LEVEL=INFO

# Admin IDs (comma-separated Telegram user IDs)
# Example: 123456789,987654321
ADMIN_IDS=123456789,987654321

# Django Admin Panel Configuration
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=django-insecure-development-key-change-in-production

# Allowed hosts for Django (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Option 1: SQLite (Development)
# DATABASE_URL=sqlite+aiosqlite:///./bot_database.db

# Option 2: PostgreSQL (Production)
# DATABASE_URL=postgresql+asyncpg://usn_bot:secure_password@postgres:5432/usn_bot_db

# PostgreSQL Settings
PG_POOL_SIZE=10
PG_MAX_OVERFLOW=20
POSTGRES_USER=usn_bot
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=usn_bot_db

# ================================
# Email Configuration (for notifications and broadcast)
# ================================

# SMTP Server Settings
# Option 1: Mailtrap (for testing) - sign up at https://mailtrap.io
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SMTP_USE_TLS=True

# Option 2: Gmail (requires app password)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True

# Option 3: Yandex Mail
# SMTP_HOST=smtp.yandex.ru
# SMTP_PORT=465
# SMTP_USERNAME=your-email@yandex.ru
# SMTP_PASSWORD=your-password
# SMTP_USE_TLS=False  (use SSL instead)

# Email Address Configuration
# This email is used for:
#  1. Sending notifications to users
#  2. Receiving support messages from users
# Specify your actual email address here (e.g., your Gmail or work email)
SUPPORT_EMAIL=your-email@example.com

# Email Display Name (shown in "From" field)
EMAIL_FROM_NAME=USN Competitions

# Support Configuration (Telegram)
SUPPORT_TELEGRAM_ID=123456789  # Your Telegram ID for receiving support messages